@model FilmsCatalog.Models.Movie
@{
    ViewBag.Title = "Добавление фильма";
}
<form asp-action="Create" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Год выпуска</label>
        <input type="number" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Producer" class="control-label">Режисер</label>
        <input type="text" asp-for="Producer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Poster" class="control-label">Постер</label>
        <input name="Poster" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>
